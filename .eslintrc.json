{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "globals": {
        "printErr": true,
        "readline": true,
        "print": true
    },
    "extends": "eslint:recommended",
    "rules": {
        // "indent": [
        //     "error",
        //     "space",
        //     {
        //         "SwitchCase": 1
        //     }
        // ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-useless-escape": [
            "off"
        ],
        "no-ternary": ["error"],
        "no-trailing-spaces": ["warn"],
        "func-call-spacing": ["warn", "never"],
        "camelcase": ["warn"],
        "no-constant-condition": "off"

    }
}
